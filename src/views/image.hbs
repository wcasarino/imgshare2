<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h2>{{image.title}} </h2>
        {{#if mismoUser}}
            <!-- 
                <p> Usuario:  {{user.id}} </p>
                <p> Image usuario: {{image.user}} </p>
            -->
            <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
                <i class="fa fa-times"></i> Delete
            </button>
        {{/if }}
    </div>
    <div class="card-body">
        <p>{{image.description}} </p>
        <div class="text-center">
            <img src="/public/upload/{{image.filename}}" class="img-fluid">
        </div>
        <div class="card-footer d-flex justify-content-between align-items-center">
            {{#if user}}
                {{#if mismoUser}}
                {{else}}
                    <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
                        <i class="fas fa-thumbs-up"></i> Like
                    </button>
                {{/if}}
            {{/if}}
            <p>
                <span class="likes-count">{{image.likes}} </span>
                <i class="fas fa-heart"></i>
            </p>
            <p>
                <i class="fas fa-eye"></i> {{image.views}}
            </p>
            <p>
                Subido por {{userName}}
                <br>
                <i class="far fa-clock"></i>
                {{timeago image.timestamp}}
            </p>
        </div>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comments</h3>
        {{#if user}}
            <button class="btn btn-info" id="btn-toggle-comment">
                <i class="fa fa-comment"></i> Post a Comment
            </button>
        {{/if}}
    </div>
    <div class="card-body">
        <blockquote id="post-comment">
            <form action="/images/{{image.uniqueId}}/comment" method="POST">
                <div class="form-group">
                    <textarea name="comment" rows="2" class="form-control" placeholder="Your comment"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" id="btn-comment">
                        <i class="fa fa-comment"></i> Post
                    </button>
                </div>
            </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comments}}
            <li class="list-group-item">
                <div class="row">
                    <a href="#" class="col-sm-2 text-left">
                        <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45" alt="">
                    </a>
                    <blockquote class="col-sm-8">
                        <p class="lead">{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} - {{timeago timestamp}}
                        </footer>
                    </blockquote>
                </div>
            </li>
            {{/each}}
        </ul>
    </div>
</div>